<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".views.user.UserFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
                android:id="@+id/home_linearLayout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@color/colorPrimary"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_imageView_pp"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="48dp"
                        android:src="@drawable/me"/>

                <TextView
                        android:id="@+id/user_textView_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sobat Ambyar"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/user_imageView_pp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"/>

                <TextView
                        android:id="@+id/user_textView_topup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 100 K"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/user_textView_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"/>

                <androidx.cardview.widget.CardView
                        android:id="@+id/user_cardView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toBottomOf="@id/user_textView_topup"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="12dp"
                        android:layout_marginBottom="-12dp">


                    <LinearLayout
                            android:id="@+id/user_linearLayout_middle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <LinearLayout
                                android:id="@+id/user_linearLayout_setting"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_margin="4dp"
                                    android:gravity="center">

                                <LinearLayout
                                        android:id="@+id/user_terdaftar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginRight="18dp"
                                        android:layout_marginLeft="18dp"
                                        android:gravity="center"
                                        android:layout_weight="1">

                                    <ImageView
                                            android:layout_width="48dp"
                                            android:layout_height="48dp"
                                            android:src="@drawable/cek"/>

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Terdaftar"
                                            android:textSize="12sp"/>

                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/user_eventSaya"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginRight="18dp"
                                        android:layout_marginLeft="18dp"
                                        android:gravity="center"
                                        android:layout_weight="1">

                                    <ImageView
                                            android:layout_width="48dp"
                                            android:layout_height="48dp"
                                            android:src="@drawable/me"/>

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Event Saya"
                                            android:textSize="12sp"/>

                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/user_topUp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginRight="18dp"
                                        android:layout_marginLeft="18dp"
                                        android:gravity="center"
                                        android:layout_weight="1">

                                    <ImageView
                                            android:layout_width="48dp"
                                            android:layout_height="48dp"
                                            android:src="@drawable/wallet"/>

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Top Up"
                                            android:textSize="12sp"/>

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center"
                                    android:padding="4dp"
                                    android:layout_marginTop="16dp">

                                <LinearLayout
                                        android:id="@+id/user_favorite"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginRight="18dp"
                                        android:layout_marginLeft="18dp"
                                        android:gravity="center"
                                        android:layout_weight="1">

                                    <ImageView
                                            android:layout_width="48dp"
                                            android:layout_height="48dp"
                                            android:src="@drawable/star"/>

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Favorite"
                                            android:textSize="12sp"/>

                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/user_settingApp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginRight="18dp"
                                        android:layout_marginLeft="18dp"
                                        android:gravity="center"
                                        android:layout_weight="1">

                                    <ImageView
                                            android:layout_width="48dp"
                                            android:layout_height="48dp"
                                            android:src="@drawable/settings"/>

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Settings"
                                            android:textSize="12sp"/>

                                </LinearLayout>

                                <LinearLayout
                                        android:id="@+id/user_infoApp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginRight="18dp"
                                        android:layout_marginLeft="18dp"
                                        android:gravity="center"
                                        android:layout_weight="1">

                                    <ImageView
                                            android:layout_width="48dp"
                                            android:layout_height="48dp"
                                            android:src="@drawable/info"/>

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Info App"
                                            android:textSize="12sp"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/user_cardview2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/user_cardView"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="12dp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <LinearLayout
                                android:id="@+id/user_bantuan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="12dp"
                                android:gravity="center_vertical">

                            <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/help"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bantuan"
                                    android:layout_marginLeft="16dp"/>

                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/user_cs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="18dp"
                                android:gravity="center_vertical">

                            <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/cs"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Customer Service"
                                    android:layout_marginLeft="16dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        app:layout_constraintTop_toBottomOf="@id/user_cardview2">

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

    </ScrollView>


</FrameLayout>