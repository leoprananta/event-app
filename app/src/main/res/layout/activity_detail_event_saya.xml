<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.detail.DetailEventSayaActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/detailSaya_imageView_poster"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/detailSaya_textView_eventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    app:layout_constraintTop_toBottomOf="@+id/detailSaya_imageView_poster"
                    android:padding="12dp"
                    tools:ignore="MissingConstraints"/>

            <TextView
                    android:id="@+id/detailSaya_textView_eventBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Papercom Indonesia"
                    android:padding="12dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/detailSaya_textView_eventName"
                    tools:ignore="MissingConstraints"/>

            <LinearLayout
                    android:id="@+id/detailSaya_linearLayout_line1"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/colorGrey"
                    app:layout_constraintTop_toBottomOf="@id/detailSaya_textView_eventBy"
                    android:orientation="horizontal"/>

            <LinearLayout
                    android:id="@+id/detailSaya_linearLayout_informasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/detailSaya_linearLayout_line1">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/informasi_event"
                        android:padding="4dp"
                        android:layout_marginTop="24dp"
                        android:textSize="14sp"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical">

                    <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/nearby"
                            android:layout_gravity="center_vertical"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="12dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lokasi"
                                android:textStyle="bold"
                                android:textSize="12sp"/>

                        <TextView
                                android:id="@+id/detailSaya_textView_eventLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jepara"
                                android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                        android:layout_width="290dp"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="4dp"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical">

                    <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/meeting"
                            android:layout_gravity="center_vertical"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="12dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kuota"
                                android:textStyle="bold"
                                android:textSize="12sp"/>

                        <TextView
                                android:id="@+id/detailSaya_textView_eventKuota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="70"
                                android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                        android:layout_width="290dp"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="3dp"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical">

                    <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/money"
                            android:layout_gravity="center_vertical"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="12dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/htm"
                                android:textStyle="bold"
                                android:textSize="12sp"/>

                        <TextView
                                android:id="@+id/detailSaya_textView_eventHtm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Free"
                                android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                        android:layout_width="290dp"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="3dp"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical">

                    <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/calendar"
                            android:layout_gravity="center_vertical"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="12dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tanggal"
                                android:textStyle="bold"
                                android:textSize="12sp"/>

                        <TextView
                                android:id="@+id/detailSaya_textView_eventDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20 Oktober 2019"
                                android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                        android:layout_width="290dp"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="32dp"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/detailSaya_linearLayout_line2"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="@color/colorGrey"
                    app:layout_constraintTop_toBottomOf="@id/detailSaya_linearLayout_informasi"
                    android:orientation="horizontal"/>

            <LinearLayout
                    android:id="@+id/detailSaya_linearLayout_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/detailSaya_linearLayout_line2">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DESKRIPSI"
                        android:padding="4dp"
                        android:layout_marginTop="24dp"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/detailSaya_textView_eventDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="@string/appbar_scrolling_view_behavior"
                        android:layout_marginTop="24dp"
                        android:textSize="12sp"/>

            </LinearLayout>

            <Button
                    android:id="@+id/btn_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="TOP"
                    app:layout_constraintTop_toBottomOf="@id/detailSaya_linearLayout_desc"/>

            <Button
                    android:id="@+id/btn_hapus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="HAPUS"
                    app:layout_constraintTop_toBottomOf="@id/btn_top"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    app:layout_constraintTop_toBottomOf="@id/btn_hapus">

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>